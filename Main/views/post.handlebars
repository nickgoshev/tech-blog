<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
{{#if comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each comments}}
          <div>
            <p>
              {{description}}
            </p>
            <p>
              from: {{user.name}} on {{format_date date_created}} 
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}
  <form class="form new-comment-form">
    <div class="form-group">
    <input type="hidden" name="post-id" id="post-id" value="{{id}}" />
    </div>
  <div class="form-group">
        <label for="comment"></label>
        <textarea class="form-input" type="text" id="comment-text" ></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">submit</button>
      </div>
</form>
</div>

<script src="/js/post.js"></script>
